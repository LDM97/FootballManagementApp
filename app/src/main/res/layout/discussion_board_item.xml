<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playerProfileImage"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/profile_icon_default"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/discussionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/primaryTextColor"
            android:ems="10"
            android:inputType="none"
            android:text="Discussion Title"
            android:layout_weight="1"/>

    </LinearLayout>

        <TextView
            android:id="@+id/discussionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/default_margin"
            android:gravity="start"
            android:textSize="@dimen/sub_text_size"
            android:textColor="@color/primaryTextColor"
            android:ems="10"
            android:inputType="none"
            android:text="text for the actual discussion post" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ems="10"
                android:gravity="start"
                android:inputType="none"
                android:text="Post By: X"
                android:textColor="@color/subTextColor"
                android:textSize="@dimen/sub_text_size" />

            <TextView
                android:id="@+id/viewComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="@dimen/sub_text_size"
                android:textColor="@color/subTextColor"
                android:ems="10"
                android:inputType="none"
                android:text="View Comments" />

        </LinearLayout>


    <!-- add seperator line between the containers -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>
